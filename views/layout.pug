      (function () {
        $('.dropdown-toggle').dropdown();
      });

      $( document ).ready(function() {
        $('.icon').on('click', function (){
          var videoURL = $(this).attr('title');
          $('.video-frame').attr('src', videoURL)
          $('.xinvisible').show();
          event.preventDefault();
        })

        //close button activate home page
        $('.xbutton').on('click', function (){
          $('.xinvisible').hide();
          $('.video-frame').attr('src', '')
        })

        $('.trigger-hidden').on('click', function (){
          var site = $(this).attr('title');
          $('.websiteRip').attr('src', site)
          $('.xinvisible-timeline').show();
          event.preventDefault();
        })

        //close button activate for timeline page
        $('.xbutton2').on('click', function (){
          $('.xinvisible-timeline').hide();
          $('.websiteRip').attr('src', '')
        })
      })
